# Server Configuration
NODE_ENV=development
PORT=7000

# Database Configuration (Admin Service Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cnh_admin_dev
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SSL=false

# Test Database
DB_NAME_TEST=cnh_admin_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES=24h

# Encryption for Environment Variables
ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=admin@cnhdistributors.com

# Stripe Configuration (for billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Redis Configuration (for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Nginx and SSL Configuration
NGINX_CONFIG_PATH=/etc/nginx/sites-available
NGINX_ENABLED_PATH=/etc/nginx/sites-enabled
SSL_CERT_PATH=/etc/letsencrypt/live
WEB_ROOT_PATH=/var/www/zenden/saas-app/client/dist
BACKEND_UPSTREAM=saas_backend
LETSENCRYPT_EMAIL=admin@zendensolutions.store

# Auto Domain Setup
AUTO_SETUP_DOMAIN=true
AUTO_GENERATE_SSL=true

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
